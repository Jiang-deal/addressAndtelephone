<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>获取小说信息</title>
    <link crossorigin="anonymous" href="https://cdn.bootcss.com/twitter-bootstrap/3.3.7/css/bootstrap.min.css"
        rel="stylesheet">
    <link rel="stylesheet" href="/xxx/index.css">

    <script crossorigin="anonymous" src="https://cdn.bootcdn.net/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    

</head>



<body>

    


    <!-- 服务器的地址 action 方法用get获取 {"State":0}-->
    <div class="content">
        
            手机号：<input type="text" name="Number" id="ph"><br/>
            <button id="btn"  >发送</button>
            <input type="reset"  style="margin-left:40px"  value="重置" />
        
        <!-- !得到状态码了 State -1风险  0空号  1实号 -->
        </div>

    

    <script>

       
        var btn = document.getElementById('btn');//绑定发送按钮
        console.log("谢谢")
        btn.onclick = function () {
            console.log("谢谢")

            var phone = $("#ph").val();
            console.log(phone)

            var data1 =
            {
                "Number": phone,
            };

            var da;
            var sta;
            $.ajax({
            
                //url
                url: 'http://localhost:8080/telephonenumber',
                data: data1,
                type: 'GET',
                contentType: 'application/json',
                //响应体结果
                dataType: 'json',
                //成功的回调
                success: function (data) {
                    sta=data.State
                    da=JSON.stringify(data);
                   
                    console.log("状态"+sta);
                    console.log("原神"+da);
                    if(sta==0){
                        alert("空号")
                    }

                    if(sta==2){
                        alert("格式错误")
                    }
                    if(sta==-1){
                        alert("风险号")
                    }


                     
                   
                     
                    
                },
                //超时时间

                error: function () {
                    
                    console.log('出错啦!!');
                },

            });


           
           
            

        }
    



    </script>
</body>

</html>
{{end}}